<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item List</title>
</head>
<body>
    <h1>Item List</h1>
    <a href="/items">Add New Item</a>
    <ul >
        <% items.forEach(item => { %>
            <li style="display: flex;">
                <form action="/items/update/<%= item._id %>" method="post">
                    <input type="text" name="name" value="<%= item.name %>" required>
                    <input type="number" name="price" value="<%= item.price %>" required>
                    <input type="text" name="brand" value="<%= item.brand %>" required>
                    <input type="text" name="category" value="<%= item.category %>" required>
                    <button type="submit">Update</button>
                </form>
                <form action="/items/delete/<%= item._id %>" method="post">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>
